<div>
  <h1>Sign up</h1>
</div>
  <div>
    <%= form_with(model: @user, local: true) do |f| %>
      
      
      <div>
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.submit 'Sign up' %>
      
      <br><%= link_to '戻る', login_path  %>
    <% end %>
  </div>
</div>